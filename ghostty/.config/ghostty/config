theme = rose-pine

cursor-style = underline
cursor-style-blink = true

mouse-hide-while-typing = true

window-decoration = auto
macos-titlebar-style = hidden

font-family = JetBrains Mono
font-size = 12

window-padding-x = 10
window-padding-y = 7
window-padding-balance = true

background-opacity = 0.9
background-blur = 50

confirm-close-surface = false

copy-on-select = clipboard

########
# TMUX #
########

# switch tabs (aka windows)

keybind = super+1=text:\x001
keybind = super+2=text:\x002
keybind = super+3=text:\x003
keybind = super+4=text:\x004
keybind = super+5=text:\x005
keybind = super+6=text:\x006
keybind = super+7=text:\x007
keybind = super+8=text:\x008
keybind = super+9=text:\x009

# next tab
keybind = super+n=text:\x00n

# prev tab
keybind = super+p=text:\x00p

# create tab
keybind = super+t=text:\x00c

# close tab
keybind = super+w=text:\x00&

# open sessions
keybind = super+s=text:\x00s

# open sessionizer
keybind = super+f=text:\x00f
