### TMUX BINDS

# switch tabs (aka windows)
keybind = super+1=text:\x001
keybind = super+2=text:\x002
keybind = super+3=text:\x003
keybind = super+4=text:\x004
keybind = super+5=text:\x005
keybind = super+6=text:\x006
keybind = super+7=text:\x007
keybind = super+8=text:\x008
keybind = super+9=text:\x009

# switch panes
keybind = super+h=text:\x00h
keybind = super+j=text:\x00j
keybind = super+k=text:\x00k
keybind = super+l=text:\x00l

# split panes
keybind = super+shift+h=text:\x00H
keybind = super+shift+j=text:\x00J
keybind = super+shift+k=text:\x00K
keybind = super+shift+l=text:\x00L
keybind = super+x=text:\x00x

# create tab
keybind = super+t=text:\x00c

# close tab
keybind = super+w=text:\x00&

# open sessions
keybind = super+s=text:\x00s

# open sessionizer
keybind = super+f=text:\x00f

# go to last session
keybind = super+b=text:\x00b
